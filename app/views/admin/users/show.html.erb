<div class="container">
    <div class="row">
      <h3><%= @user.last_name %><%= @user.first_name %>さんの会員情報詳細</h3>
    </div>
    
   <div class="row">
    <div class="col-md-12">
        <table class="table cart_items">
          <tr>
            <th style="width: 30%">会員ID</th>
            <td style="width: 70%"><%= @user.id %></td>
          </tr>
          <tr>
             <th>氏名</th>
             <td><%= @user.last_name %><%= @user.first_name %></td>
          </tr>
          <tr>
             <th>フリガナ</th>
             <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
          </tr>
          <tr>
             <th>郵便番号</th>
             <td><%= @user.postal_code %></td>
          </tr>
          <tr>
             <th>住所</th>
             <td><%= @user.address %></td>
          </tr>
          <tr>
             <th>電話番号</th>
             <td><%= @user.telephone_number %></td>
          </tr>
          <tr>
             <th>メールアドレス</th>
             <td><%= @user.email %></td>
          </tr>
          <tr>
             <th>会員ステータス</th>
             <% if @user.is_deleted == false %>
              <td>有効</td>
             <% else %>
              <td>退会</td>
             <% end %>
          </tr>
         </table>
        </div>
       </div>
       
        
 <div class="row">
    <div class="col-md-5 clearfix">
        
     <div class="float-right"><%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %></div>      
    </div>
    <div class="col-md-7">
      <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary" %>    
    </div>
 </div>
 
</div>